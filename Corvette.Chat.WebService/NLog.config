<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <targets async="true">
        <target xsi:type="Console"
                name="console"
                layout="${longdate} ${level:upperCase=true} ${message}${onexception:${newline}${exception:format=tostring}}"
                detectConsoleAvailable="true"/>
        <target name="logfile" xsi:type="File"
                layout="${longdate} ${level:upperCase=true} ${message}${onexception:${newline}${exception:format=tostring}}"
                fileName="${basedir}/logs/main.log"
                archiveFileName="${basedir}/logs/archive/main{#}.zip"
                archiveEvery="Day"
                archiveNumbering="Date"
                enableArchiveFileCompression="true"
                maxArchiveFiles="30"
                createDirs="true" />
        <target name="errorsFile" xsi:type="File"
                layout="${longdate} ${level:upperCase=true} ${message}${onexception:${newline}${exception:format=tostring}}"
                fileName="${basedir}/logs/errors.log"
                archiveFileName="${basedir}/logs/archive/errors_{#}.zip"
                archiveEvery="Day"
                archiveNumbering="Date"
                enableArchiveFileCompression="true"
                maxArchiveFiles="30"
                createDirs="true" />
        <target name="warningsFile" xsi:type="File"
                layout="${longdate} ${level:upperCase=true} ${message}${onexception:${newline}${exception:format=tostring}}"
                fileName="${basedir}/logs/warnings.log"
                archiveFileName="${basedir}/logs/archive/warnings_{#}.zip"
                archiveEvery="Day"
                archiveNumbering="Date"
                enableArchiveFileCompression="true"
                maxArchiveFiles="30"
                createDirs="true" />

        <target name="microsoft" xsi:type="File"
                layout="${longdate} ${level:upperCase=true} ${message}${onexception:${newline}${exception:format=tostring}}"
                fileName="${basedir}/logs/microsoft.log"
                archiveFileName="${basedir}/logs/archive/microsoft_{#}.zip"
                archiveEvery="Day"
                archiveNumbering="Date"
                enableArchiveFileCompression="true"
                maxArchiveFiles="30"
                createDirs="true" />
    </targets>

    <rules>
        <logger name="*" minlevel="Error" writeTo="errorsFile" />
        <logger name="*" level="Warn" writeTo="warningsFile" />
        
        <logger name="Microsoft.*" minLevel="Info" writeTo="microsoft" final="true"/>
        
        <logger name="*" minlevel="Debug" writeTo="console" />
        <logger name="*" minlevel="Debug" writeTo="logfile" />
    </rules>
</nlog>